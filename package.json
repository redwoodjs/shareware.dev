{
  "name": "addons",
  "version": "1.0.0",
  "description": "Build fast, server-driven web apps on Cloudflare with SSR, RSC, and realtime. ",
  "main": "index.js",
  "type": "module",
  "keywords": [],
  "author": "Amy (Haywood) Dutton - @ahaywood",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "NODE_ENV=${NODE_ENV:-development} vite dev",
    "dev:init": "rw-scripts dev-init",
    "preview": "vite preview",
    "worker:run": "rw-scripts worker-run",
    "clean": "npm run clean:vite",
    "clean:vite": "rm -rf ./node_modules/.vite",
    "release": "rw-scripts ensure-deploy-env && npm run clean && prisma generate && RWSDK_DEPLOY=1 npm run build && wrangler deploy",
    "migrate:dev": "prisma generate && wrangler d1 migrations apply DB --local",
    "migrate:prd": "wrangler d1 migrations apply DB --remote",
    "migrate:new": "rw-scripts migrate-new",
    "seed": "npm run worker:run ./src/scripts/seed.ts",
    "generate": "rw-scripts ensure-env && prisma generate && wrangler types",
    "check": "npm run generate && npm run types",
    "types": "tsc",
    "prepare": "vibe-rules install cursor",
    "icons": "lemon-lime-svgs"
  },
  "dependencies": {
    "@prisma/adapter-d1": "~6.8.2",
    "@prisma/client": "~6.8.2",
    "@tailwindcss/vite": "^4.1.7",
    "bcryptjs": "^3.0.2",
    "captain-react-hooks": "^1.0.0",
    "marked": "^16.0.0",
    "motion": "^12.15.0",
    "prismjs": "^1.30.0",
    "resend": "^4.5.1",
    "rwsdk": "0.1.10",
    "sonner": "^2.0.3",
    "tailwindcss": "^4.1.7",
    "zod": "^3.25.49"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "1.7.4",
    "@cloudflare/workers-types": "^4.20250407.0",
    "@content-collections/core": "^0.9.0",
    "@content-collections/markdown": "^0.1.4",
    "@content-collections/vite": "^0.2.4",
    "@types/node": "^22.14.0",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "lemon-lime-svgs": "^2.0.1",
    "prisma": "~6.8.2",
    "typescript": "^5.8.3",
    "vibe-rules": "^0.2.31",
    "vite": "^6.2.6",
    "wrangler": "^4.20.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "esbuild",
      "prisma",
      "sharp",
      "workerd"
    ]
  },
  "lemonLimeSvgs": {
    "inputDir": "./other/svg-icons",
    "outputDir": "./public/images/icons",
    "typesDir": "./types",
    "spriteFilename": "sprite.svg",
    "typeFilename": "icons.d.ts",
    "verbose": true,
    "generateReadme": false
  }
}
